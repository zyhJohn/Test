.cart-empty {
  /* border: 1px solid green; */
  margin-top: 100rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cart-empty-image {
  /* border: 1px solid green; */
  margin-top: 120rpx;
  width: 350rpx;
  height: 350rpx;
}
.cart-empty-title {
  /* border: 1px solid green; */
  color: #9b9b9b;
  margin-top: 30rpx;
  font-size: 12pt;
}
.cart-empty-button {
  margin-top: 120rpx;
  width: 379rpx;
  height: 69rpx;
  color: #fff;
  font-size: 12pt;
  text-align: center;
  line-height: 69rpx; /*行高和盒子高度height一致，结合text-align,就可以垂直居中了*/
  background: rgba(279, 177, 41, 0.9);
  border-radius: 15rpx;
  border: none;
}

.cartList {
  display: flex;
  flex-direction: column;
  align-items: left;
  box-sizing: border-box;
}

.cartItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 160px;
  border-color: greenyellow;
  border-width: medium;
}

.itemImage {
  width: 100px;
  height: 100px;
  border: black;
}

.buyButton {
  background-color: #E64340;
  align-self: flex-end;
  margin-right: 0rem;
}

.addRemove {
  width: 20px;
  height: 20px;
}

.buyView {
  align-self: flex-end;
  margin-right: 1rem;
}