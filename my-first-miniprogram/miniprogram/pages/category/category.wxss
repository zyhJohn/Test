/* pages/category/category.wxss */
/* 上方搜索框 */
.search-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  /* border: 1px solid #aaa; */
}
.search-items {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 60rpx;
  background-color: #eee;
  border-radius: 30rpx;
}
.search-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 左侧标题区 */
.scroll-title {
  position: absolute;
  left: 0rpx;
  top: 100rpx;
  bottom: 0rpx;
  width: 150rpx;
}
.title-container {
  width: 150rpx;
  height: 80rpx;
  text-align: left;
  line-height: 80rpx;/*行高和盒子高度一致，结合text-align,就可以垂直居中了*/
  font-size: 9pt;
}
.not-selected {
  background-color: white;
}
.selected {
  /* background-color: yellow; */
  border: none;
  /* border-radius: 0; */
  color: #f00;
}

/* 右侧内容区 */
.scroll-content {
  position: absolute;
  left: 150rpx;
  top: 100rpx;
  bottom: 0rpx;
  width: 600rpx;
  padding: 10rpx 10rpx;
  background-color: #fff;
}
.content-image {
  width: 580rpx;
  height: 400rpx;
}